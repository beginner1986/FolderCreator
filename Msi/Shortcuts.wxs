<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
        <StandardDirectory Id="DesktopFolder">
            <Component Id="ApplicationShortcutDesktop">
                <Shortcut Id="ApplicationDesktopShortcut" Name="FolderCreator" Description="Aplikacja Folderowa" Target="[INSTALLFOLDER]FolderCreator.exe" WorkingDirectory="INSTALLFOLDER" Icon="AppIcon" />
                <RemoveFolder Id="DesktopFolder" On="uninstall" />
                <RegistryValue Root="HKCU" Key="Software\beginner1986\FolderCreator" Name="installed" Type="integer" Value="1" KeyPath="yes" />
            </Component>
        </StandardDirectory>
    </Fragment>
</Wix>
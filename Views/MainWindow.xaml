<Window x:Class="FolderCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderCreator" 
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500"
        ResizeMode="NoResize">
    <Window.InputBindings>
        <KeyBinding Command="{Binding AddTemplateCommand}" Key="N" Modifiers="Control" />
        <KeyBinding Command="{Binding EditTemplateCommand}" Key="E" Modifiers="Control" CommandParameter="{Binding SelectedItem, ElementName=TemplatesTreeView}" />
    </Window.InputBindings>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="4"/>
            <RowDefinition Height="133*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

         <!-- row 0 -->
        <TextBox 
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Text="Aplikacja Folderowa" 
            FontSize="20" 
            FontWeight="Bold"
            BorderThickness="0"
            Margin="0,0,0,10"
        />
        <Button 
            Grid.Row="0" 
            Grid.Column="2" 
            BorderThickness="0"
            Width="35"
            HorizontalAlignment="Right"
            Background="White"
            Margin="5,5,5,5"
        >
            <materialIcons:MaterialIcon Kind="Cog"/>
        </Button>

        <!-- row 1 -->
        <Button 
            Command="{Binding UseTemplateCommand}"
            CommandParameter="{Binding SelectedItem, ElementName=TemplatesTreeView}"
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,5,5"
        >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="FolderOutline" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock 
                    Text="Użyj szablonu" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    FontSize="14"
                />
            </StackPanel>
        </Button>
        
        <TextBox 
            Text="Szukaj szablonu..." 
            FontSize="14"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5,0,0,5"
            VerticalContentAlignment="Center"
        />

        <!-- row 2 -->
        <Line
            X1="0" Y1="2" X2="500" Y2="2" 
            Stroke="DarkGray" 
            StrokeThickness="1"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
        />

        <!-- row 3 -->
        <TreeView 
            x:Name="TemplatesTreeView" 
            ItemsSource="{Binding Templates}" 
            FontSize="14"
            Grid.Row="3" 
            Grid.Column="0" 
            Grid.ColumnSpan="3" 
            Margin="0,5,0,0"
            KeyDown="TemplatesTreeView_KeyDown">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Folders}">
                    <HierarchicalDataTemplate.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="IsExpanded" Value="True" />
                        </Style>
                    </HierarchicalDataTemplate.ItemContainerStyle>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <materialIcons:MaterialIcon Kind="FolderOutline" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                    </StackPanel>
                    <HierarchicalDataTemplate.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Subfolders}">
                            
                            <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                                <materialIcons:MaterialIcon Kind="Folder" VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- row 4 -->
        <Button
            Command="{Binding AddTemplateCommand}"
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,5,5,0"
    >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="FolderPlusOutline" Margin="0,0,10,0"/>
                <TextBlock 
                HorizontalAlignment="Center" 
                FontSize="14"
                VerticalAlignment="Center"
            >
                    <TextBlock.Inlines>
                        <Underline>N</Underline>owy szablon
                    </TextBlock.Inlines>
                </TextBlock>
            </StackPanel>
        </Button>
        <Button
            Command="{Binding EditTemplateCommand}"
            CommandParameter="{Binding SelectedItem, ElementName=TemplatesTreeView}"
            Grid.Row="4"
            Grid.Column="1"
            Margin="5,5,5,0"
        >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="PencilOutline" Margin="0,0,10,0"/>
                <TextBlock 
                    HorizontalAlignment="Center" 
                    FontSize="14"
                    VerticalAlignment="Center"
                >
                    <TextBlock.Inlines>
                        <Underline>E</Underline>dytuj szablon
                    </TextBlock.Inlines>
                </TextBlock>
            </StackPanel>
        </Button>
        <Button
            Command="{Binding DeleteTemplateCommand}"
            CommandParameter="{Binding ElementName=TemplatesTreeView, Path=SelectedItem}"
            Grid.Row="4"
            Grid.Column="2"
            Margin="5,5,0,0"
        >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="TrashCanOutline" Margin="0,0,10,0"/>
                <TextBlock 
            Text="Usuń szablon" 
            HorizontalAlignment="Center" 
            FontSize="14"
            VerticalAlignment="Center"
        />
            </StackPanel>
        </Button>
    </Grid>
</Window>

<Window x:Class="FolderCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderCreator" xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="4"/>
            <RowDefinition Height="133*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

         <!-- row 0 -->
        <TextBox 
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Text="Aplikacja Folderowa" 
            FontSize="20" 
            FontWeight="Bold"
            BorderThickness="0"
            Margin="0,0,0,10"
        />
        <Button 
            Grid.Row="0" 
            Grid.Column="2" 
            BorderThickness="0"
            Width="35"
            HorizontalAlignment="Right"
            Background="White"
            Margin="5,5,5,5"
        >
            <materialIcons:MaterialIcon Kind="Cog"/>
        </Button>

        <!-- row 1 -->
        <Button 
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,5,5"
        >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="FolderOutline" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock 
                    Text="Użyj szablonu" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    FontSize="14"
                />
            </StackPanel>
        </Button>
        
        <TextBox 
            Text="Szukaj szablonu..." 
            FontSize="14"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5,0,0,5"
            VerticalContentAlignment="Center"
        />

        <!-- row 2 -->
        <Line
            X1="0" Y1="2" X2="500" Y2="2" 
            Stroke="DarkGray" 
            StrokeThickness="1"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
        />

        <!-- row 3 -->
        <ListView
            FontSize="14"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,5,0,0"
            ItemsSource="{Binding Templates}"
        >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <materialIcons:MaterialIcon 
                                Kind="FolderOutline" 
                                VerticalAlignment="Center" 
                                Margin="0,0,10,0"
                            />
                            <TextBlock 
                                Text="{Binding Name}" 
                                VerticalAlignment="Center"
                            />
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding Folders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                        <materialIcons:MaterialIcon Kind="FolderOutline" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Path}" Margin="0,0,10,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- row 4 -->
        <Button
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,5,5,0"
    >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="FolderPlusOutline" Margin="0,0,10,0"/>
                <TextBlock 
                Text="Nowy szablon" 
                HorizontalAlignment="Center" 
                FontSize="14"
                VerticalAlignment="Center"
            />
            </StackPanel>
        </Button>
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Margin="5,5,5,0"
        >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="PencilOutline" Margin="0,0,10,0"/>
                <TextBlock 
                    Text="Edytuj szablon" 
                    HorizontalAlignment="Center" 
                    FontSize="14"
                    VerticalAlignment="Center"
                />
            </StackPanel>
        </Button>
        <Button
            Grid.Row="4"
            Grid.Column="2"
            Margin="5,5,0,0"
        >
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="TrashCanOutline" Margin="0,0,10,0"/>
                <TextBlock 
            Text="Usuń szablon" 
            HorizontalAlignment="Center" 
            FontSize="14"
            VerticalAlignment="Center"
        />
            </StackPanel>
        </Button>
    </Grid>
</Window>

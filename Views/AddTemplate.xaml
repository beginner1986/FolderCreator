<Window x:Class="FolderCreator.Views.AddTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderCreator.Views"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:converters="clr-namespace:FolderCreator.Converters"
        mc:Ignorable="d"
        Title="Nowy szablon" Height="450" Width="800"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DDDDDD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBBBBB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Template Name Input -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
            <Label Content="Nazwa szablonu:"/>
            <TextBox
                x:Name="TemplateNameTextBox"
                Width="200" 
                Text="{Binding CurrentTemplate.Name, UpdateSourceTrigger=PropertyChanged}"
                VerticalContentAlignment="Center"
                Height="25"/>
        </StackPanel>
       
        <!-- List of Folder Paths -->
        <TreeView x:Name="TemplatesTreeView" ItemsSource="{Binding CurrentTemplate.Folders}" FontSize="14" Grid.Row="2" Margin="0,5,0,0">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="True"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    <EventSetter Event="PreviewMouseDoubleClick" Handler="TreeViewItem_PreviewMouseDoubleClick"/>
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Subfolders}">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <materialIcons:MaterialIcon Kind="Folder" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                 Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 VerticalAlignment="Center"
                                 MinWidth="100"
                                 LostFocus="TextBox_LostFocus"
                                 KeyDown="TextBox_KeyDown"
                                 Height="25"/>
                        <TextBlock Text="{Binding Name}"
                                   Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                   VerticalAlignment="Center" />
                        <Button Click="AddSubfolderButton_Click"
                                ToolTip="Dodaj podfolder"
                                Tag="{Binding}"
                                Style="{StaticResource IconButtonStyle}"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="PlusOutline" Width="20" Height="20" />
                        </Button>
                        <Button Click="AddVariableButton_Click"
                            ToolTip="Zamień na zmienną"    
                            Tag="{Binding}"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="CodeBraces" Width="20" Height="20" />
                        </Button>
                        <Button Click="EditSubfolderButton_Click"
                                ToolTip="Edytuj nazwę folderu"
                                Tag="{Binding}"
                                Style="{StaticResource IconButtonStyle}"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="PencilOutline" Width="20" Height="20" />
                        </Button>
                        <Button Click="RemoveSubfolderButton_Click"
                                ToolTip="Usuń folder wraz z podfolderami"
                                Tag="{Binding}" 
                                Style="{StaticResource IconButtonStyle}"
                                Foreground="Red"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="20" Height="20" />
                        </Button>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button 
                Margin="0,5,10,0" 
                Click="SaveTemplateButton_Click"
                HorizontalAlignment="Center" 
                FontSize="14"
                VerticalAlignment="Center"
            >
                <StackPanel Orientation="Horizontal">
                    <materialIcons:MaterialIcon Kind="FloppyDisk" Margin="0,0,10,0"/>
                    <TextBlock 
                        Text="Zapisz szablon" 
                        HorizontalAlignment="Center" 
                        FontSize="14"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                    />
                </StackPanel>
            </Button>
            <Button 
                Margin="0,5,0,0" 
                Click="CancelButton_Click"
                HorizontalAlignment="Center" 
                FontSize="14"
                VerticalAlignment="Center"
            >
                <StackPanel Orientation="Horizontal">
                    <materialIcons:MaterialIcon Kind="Cancel" Margin="0,0,10,0"/>
                    <TextBlock 
                        Text="Anuluj" 
                        HorizontalAlignment="Center" 
                        FontSize="14"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        
                    />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
